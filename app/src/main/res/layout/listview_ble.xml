<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ls="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_height"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp">
        <TextView
            android:id="@+id/tv_ble_device"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:ellipsize="marquee"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="device name"
            android:textColor="#6b6969"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:textSize="12sp" />
        <ywcai.ls.controls.percent.LsPercentBar
            android:id="@+id/pb_ble_Dbm"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            ls:border="1"
            ls:percent="50"
            ls:barTextSize="8"
            android:layout_width="100dp"></ywcai.ls.controls.percent.LsPercentBar>

    <TextView
        android:id="@+id/tv_ble_mac"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="marquee"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:text="[AB-AB-AB-AB-AB-AB]"
        android:textColor="#6b6969"
        android:textSize="10sp"
        android:layout_below="@+id/pb_ble_Dbm"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"/>
</RelativeLayout>