<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ls="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="5dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="5dp">


        <TextView
            android:id="@+id/device_name"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:ellipsize="marquee"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="1A1JAH-1ANAJJ1"
            android:textColor="#6b6969"
            android:textSize="12sp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"/>


    <TextView
        android:id="@+id/device_id"
        android:layout_marginTop="5dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/device_name"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:ellipsize="marquee"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:text="WPA"
        android:textColor="#6b6969"
        android:textSize="10sp"
        />
        <TextView
            android:id="@+id/tv_device"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:layout_alignTop="@+id/device_id"
            android:layout_toRightOf="@+id/device_id"
            android:ellipsize="marquee"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="device name"
            android:textColor="#6b6969"
            android:textSize="10sp"
            android:layout_marginLeft="5dp" />





        <TextView
            android:id="@+id/tv_channel"
            android:layout_marginTop="5dp"
            android:layout_width="60dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/device_id"
            android:layout_height="15dp"
            android:ellipsize="marquee"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="信道:14"
            android:textColor="#6b6969"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tv_frequency"
            android:layout_width="160dp"
            android:layout_height="15dp"
            android:layout_alignTop="@+id/tv_channel"
            android:layout_toRightOf="@+id/tv_channel"
            android:ellipsize="marquee"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="频点:1345MHZ      速率:73M"
            android:textColor="#6b6969"
            android:textSize="10sp" />
        <ywcai.ls.controls.percent.LsPercentBar
            android:layout_width="100dp"
            android:layout_alignTop="@+id/tv_channel"
            android:layout_alignParentRight="true"
            android:id="@+id/pb_Dbm"
            ls:border="1"
            ls:percent="50"
            ls:barTextSize="8"
            android:layout_height="15dp"></ywcai.ls.controls.percent.LsPercentBar>

    <TextView
        android:id="@+id/tv_mac"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:ellipsize="marquee"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:text="[AB-AB-AB-AB-AB-AB]"
        android:textColor="#6b6969"
        android:textSize="10sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>