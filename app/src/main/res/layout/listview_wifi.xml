<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingBottom="5dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="5dp">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_sid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="1A1JAH-1ANAJJ1"
            android:textColor="#6b6969"
            android:textSize="12sp" />
        <TextView
            android:id="@+id/tv_mac"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="[AB-AB-AB-AB-AB-AB]"
            android:textColor="#6b6969"
            android:textSize="10sp"
            android:layout_marginLeft="20dp" />
   </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">
    <TextView
        android:id="@+id/tv_keyType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="marquee"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:text="WPA"
        android:textColor="#6b6969"
        android:textSize="10sp"
        />
        <TextView
            android:id="@+id/tv_device"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:gravity="center_vertical"
            android:singleLine="false"
            android:text="device name"
            android:textColor="#6b6969"
            android:textSize="10sp"
            android:layout_marginLeft="5dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">
        <TextView
            android:id="@+id/tv_channel"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="信道:14"
            android:textColor="#6b6969"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tv_frequency"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="频点:1345MHZ      速率:73M"
            android:textColor="#6b6969"
            android:textSize="10sp" />
        <ywcai.ls.control.MyProgress
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:id="@+id/pb_Dbm"
            android:textSize="10sp"
            android:textColor="#14ab2d"
            android:gravity="center"
            android:text="" />
    </LinearLayout>
</LinearLayout>