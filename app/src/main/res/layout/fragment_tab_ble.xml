<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ywcai.ls.ui.child.BleFragment"
    android:orientation="vertical"
    android:id="@+id/tab_ble">

    <!-- TODO: Update blank fragment layout -->
    <android.support.v7.widget.SwitchCompat
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/isBleSave"
        android:text="@string/saved_ble"
        android:checked="false"
        android:hapticFeedbackEnabled="false"
        android:singleLine="true"
        android:soundEffectsEnabled="true"
        android:textSize="20sp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:background="#e7ecea"
        android:textColor="#62161f"
        android:duplicateParentState="false"
        android:keepScreenOn="false" />

    <android.support.v7.widget.ListViewCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/now_ble"
        android:layout_gravity="center_horizontal"
        android:divider="#bebebe"
        android:footerDividersEnabled="true"
        android:dividerHeight="1dp"
        android:fitsSystemWindows="false" />

</LinearLayout >
