<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/qq_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/fbutton_default_shadow_color"
      >

        <TextView
            android:id="@+id/remote_logout"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:clickable="true"
            android:gravity="center"
            android:text="退出"
            android:textSize="16sp"
            android:visibility="invisible"
            android:textColor="@android:color/white" />


        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:id="@+id/remote_logo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/log2"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/fbutton_color_clouds"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:id="@+id/remote_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/remote_logo"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="未登录"
            android:textColor="@color/percentBackground"
            android:textSize="12sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/remote_login_ui"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/qq_head"
        android:layout_marginTop="5dp"
        android:gravity="center_horizontal">

        <info.hoang8f.widget.FButton
            android:id="@+id/remote_login_qq"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:drawableLeft="@drawable/qq_login"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="QQ授权登录"
            android:textColor="@color/percentBackground"
            android:textSize="12sp"
            fbutton:buttonColor="@color/fbutton_default_shadow_color"
            fbutton:cornerRadius="8dp"
            fbutton:shadowEnabled="false"
            fbutton:shadowHeight="5dp" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/remote_login_in"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/qq_head"
        android:visibility="invisible">
        <RelativeLayout
            android:id="@+id/re_add_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/fbutton_default_shadow_color">
        <TextView
            android:layout_alignParentRight="true"
            android:id="@+id/remote_add_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="+"
            android:textSize="30sp"
            android:textColor="@android:color/white"
            />
        </RelativeLayout>
        <!--<ListView-->
            <!--android:id="@+id/device_list"-->
            <!--android:layout_below="@id/remote_add_btn"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent"-->
            <!--style="@style/MyListViewTheme"-->
            <!--android:choiceMode="singleChoice"-->
            <!--android:clickable="true"></ListView>-->

        <ywcai.ls.controls.pull.LsPullView
            xmlns:ls="http://schemas.android.com/apk/res-auto"
            android:layout_below="@id/re_add_btn"
            android:id="@+id/device_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            ls:autoRefresh="false"
            ls:isAppend="true"
            ls:isLoadCache="false"
            ls:isPercent="false"
            ls:listMode="LIST"
            ></ywcai.ls.controls.pull.LsPullView>
    </RelativeLayout>
    <ywcai.ls.controls.loader.LoaderView
        android:id="@+id/remote_login_loader"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:visibility="gone"></ywcai.ls.controls.loader.LoaderView>
    <!--<ywcai.ls.controls.popwindow.PopView-->
        <!--xmlns:ls="http://schemas.android.com/apk/res-auto"-->
        <!--android:id="@+id/add_device_text"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:visibility="invisible"-->
        <!--ls:popTitle="输入设备名："-->
        <!--&gt;</ywcai.ls.controls.popwindow.PopView>-->
</RelativeLayout>
