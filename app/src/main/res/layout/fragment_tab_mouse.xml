<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.fragment.sub.LanFragment">

    <RelativeLayout
        android:id="@+id/rl_head"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#2bc663">

        <android.support.v4.widget.ContentLoadingProgressBar
            android:id="@+id/pb_lan"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:indeterminate="false"
            android:indeterminateBehavior="cycle"
            android:progress="0"
            android:theme="@style/Base.Widget.AppCompat.ProgressBar.Horizontal" />

        <TextView
            android:id="@+id/tv_load_tip"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center_vertical"
            android:text="0"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ffffff"
            android:textSize="10dp" />
    </RelativeLayout>

    <ywcai.ls.control.MyPullListView
        android:id="@+id/list_lan"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_head"
        android:longClickable="true"
        android:clickable="true"
        android:choiceMode="singleChoice" />

    <FrameLayout
        android:id="@+id/frame_mask"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.8"
        android:background="#9b9999">

    </FrameLayout>

    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/loader"
        android:indeterminate="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/rl_show_config"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:background="@drawable/background_pop"
        android:nestedScrollingEnabled="false">

        <ImageView
            android:id="@+id/btn_close"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="50dp"
            android:layout_toRightOf="@+id/textView"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 输入控制秘钥"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#9c4a4a"
            android:textSize="16dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp" />

        <EditText
            android:id="@+id/tv_psw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="false"
            android:ems="10"
            android:gravity="center_horizontal"
            android:inputType="textPassword|textVisiblePassword"
            android:maxLength="20"
            android:textColor="#9e2896"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_below="@+id/textView"
            android:layout_marginTop="10dp"
            android:layout_alignLeft="@+id/textView" />

        <TextView
            android:id="@+id/tv_conn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/tv_psw"
            android:layout_below="@+id/tv_psw"
            android:layout_marginTop="10dp"
            android:text="确认连接"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#5bb640"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_marginBottom="20dp" />

    </RelativeLayout>

</RelativeLayout>
