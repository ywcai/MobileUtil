<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".support.VersionActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/remote_menu"
        android:visibility="visible">
        <Button
            android:text="进入空中鼠标模式"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bt_mouse"
            android:textSize="18sp"
            android:onClick="StartAirMouse"
            android:layout_marginTop="20dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:visibility="visible"
            android:background="@android:color/holo_blue_bright" />
        <Button
            android:text="进入手机投影模式"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bt_shadow"
            android:textSize="18sp"
            android:onClick="StartShadowService"
            android:layout_below="@+id/bt_mouse"
            android:layout_marginTop="20dp"
            android:visibility="visible"
            android:background="@android:color/holo_purple" />
        <Button
            android:text="断开远端网络连接"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bt_exit"
            android:textSize="18sp"
            android:layout_below="@+id/bt_shadow"
            android:layout_marginTop="20dp"
            android:visibility="visible"
            android:background="@android:color/darker_gray" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/mouse_ui"
        android:visibility="invisible">
        <Button
            android:text="模拟远端PC的ESC键"
            android:layout_width="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/btn_exit_mouse"
            android:id="@+id/btn_esc"
            android:textSize="16sp"
            android:layout_height="70dp"
            android:onClick="SendEsc"
            android:background="@android:color/holo_purple" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/bt_main"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/btn_esc"
            android:text="@string/mouse_use_help"
            android:textSize="16sp"
            android:layout_above="@+id/bt_right"
            android:background="@android:color/holo_blue_dark"
            android:textAlignment="center" />

        <Button
            android:text="右键"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_alignParentRight="true"
            android:id="@+id/bt_right"
            android:textSize="16sp"
            android:layout_alignParentEnd="false"
            android:layout_alignParentBottom="true"
            android:background="@android:color/holo_blue_bright" />

        <Button
            android:text="左键"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:id="@+id/bt_left"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:textSize="14sp"
            android:background="@android:color/holo_blue_bright" />

        <Button
            android:text="左键+移动鼠标"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/bt_right"
            android:layout_toRightOf="@+id/bt_left"
            android:id="@+id/bt_left_move"
            android:textSize="16sp"
            android:background="@android:color/holo_green_light" />

        <Button
            android:text="返回菜单"
            android:layout_width="wrap_content"
            android:id="@+id/btn_exit_mouse"
            android:textSize="16sp"
            android:layout_height="70dp"
            android:onClick="QuitMouseMode"
            android:background="@android:color/darker_gray"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>




</RelativeLayout>